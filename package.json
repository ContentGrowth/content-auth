{
    "name": "@contentgrowth/content-auth",
    "version": "0.2.4",
    "description": "Better Auth wrapper with UI components for Cloudflare Workers & Pages",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "content-auth": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./backend": {
            "types": "./dist/backend/index.d.ts",
            "import": "./dist/backend/index.js"
        },
        "./frontend": {
            "types": "./dist/frontend/index.d.ts",
            "import": "./dist/frontend/index.js"
        },
        "./client": {
            "types": "./dist/frontend/client.d.ts",
            "import": "./dist/frontend/client.js"
        },
        "./styles.css": "./dist/styles.css"
    },
    "files": [
        "dist",
        "schema",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup && cp src/styles.css dist/styles.css",
        "dev": "tsup --watch",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "auth",
        "better-auth",
        "cloudflare",
        "workers",
        "pages",
        "react"
    ],
    "author": "Content Growth",
    "license": "MIT",
    "peerDependencies": {
        "react": ">=18.2.0",
        "react-dom": ">=18.2.0"
    },
    "dependencies": {
        "better-auth": "^1.4.9",
        "cac": "^6.7.14",
        "drizzle-orm": "^0.45.1",
        "hono": "^4.11.3"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20251231.0",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    }
}
